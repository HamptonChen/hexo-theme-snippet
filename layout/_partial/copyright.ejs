<div class="copyright">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <%- partial('_partial/busuanzi') %>
            </div>
            <div class="col-sm-12">
                <span>Copyright &copy;
                    <%= theme.since %>
                    <% if(theme.beian) { %><a href="//beian.miit.gov.cn/" target="_blank" rel="nofollow">
                        <%= theme.beian %></a>
                    <% } %>
                </span> |
                <span>
                    Powered by <a href="//hexo.io" class="copyright-links" target="_blank" rel="nofollow">Hexo</a>
                </span> |
                <span>
                    Theme by <a href="//github.com/shenliyang/hexo-theme-snippet.git" class="copyright-links" target="_blank" rel="nofollow">Snippet</a>
                </span>
                <% if(theme.icp.enable){ %>
                    <span> | </span>
                    <span>
                        <a href="<%= theme.icp.url %>" target="_blank" rel="nofollow">
                            <%= theme.icp.id %>
                        </a>
                    </span>
                <% } %>
                <% if(theme.gongan_beian.enable){ %>
                    <span> | </span>
                    <a target="_blank" href="<%= theme.gongan_beian.url %>" rel="nofollow">
                        <img src="<%= theme.gongan_beian.icon %>" width="20">
                        <span><%= theme.gongan_beian.id %></span>
                    </a>
                <% } %>         
            </div>
        </div>
    </div>
</div>
<%- partial('_partial/script') %>